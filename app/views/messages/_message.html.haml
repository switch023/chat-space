
.message__box
  .message__box__list
    %p.message__box__list__user
      = message.user.name
    %p.message__box__list__date
      = message.created_at.strftime("%Y年%m月%d日 %H時%M分")
  .message__box__input
    - if message.body.present?
      %p.message__box__input__text
        = message.body
    = image_tag message.image.url, class: 'message__box__input__image' if message.image.present?